<!--pages/edit/index.wxml-->
<view style="background: #85a">
  <text>动态内容</text>
  <textarea class="content" value="{{content}}" bindinput="contentChangeAction"></textarea>
</view>


<view style="background: #38a">
  <view>
    <image wx:for="{{showImages}}" wx:key="index" src="{{item}}" style="width:100rpx; height: 100rpx" />
  </view>
  <view class="select-image" bindtap="selectImageAction">
    <image class="camera-icon" src="../../src/camera.png"></image>
  </view>
  <view>宠物照片(最多三张)</view>
</view>