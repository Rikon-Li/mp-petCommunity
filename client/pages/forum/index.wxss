.wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
}

.messageWrap {
  box-sizing: border-box;
  width: 700rpx;
  display: flex;
  flex-direction: column;
  background-color: #F6F6F6;
  padding: 30rpx;
  border-radius: 20rpx;
}

.messageTop {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.nicknameWrap {
  display: flex;
  align-items: center;
}

.nickname {
  margin-left: 30rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #222;
}

.timeWrap {
  /* margin-right: 30rpx; */
  justify-items: end;
  display: flex;
  color: #333;
}

.messageMiddle {
  display: wrap;
  flex-direction: column;
}

.message {
  color: #232323;
  margin: 30rpx 10rpx;
}

.m_pics {
  display: flex;
  justify-content: space-evenly;
}

.m_pic {
  width: 0;
  flex: 1;
  margin: 10rpx;
}

.m_pic image {
  width: 100%;
  height: 85px;
  border-radius: 10rpx;
}

.messageBottom {
  color: #666;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}