.swiper{
  height: 300rpx;
  width: 100%;
}
page{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.item-img{
  width: 100%;
  height: 100%;
}

.adopt{
  padding: 20rpx 10rpx;
   display: flex;
   justify-content: space-between;
   font-size: 30rpx;
   color: #999;
 }
 .firstT{
   color: #333;
   font-weight: bold;
   font-size: 35rpx;
 }
 .adoptConWrap{
  width: 100%;
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  border-radius: 60rpx;
  margin-bottom: 15rpx;
  flex-direction: column;
}
 .adoptCon{
  white-space: nowrap;
}
.adoptItem{
  /* height: 330rpx; */
  border: 1rpx solid rgba(1, 1, 1, 0.1);
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  /* overflow: hidden; */
  width: 250rpx;
  /* display: inline-block; */
  
   display: inline-flex;
  flex-direction: column;
  align-items: center; 
}
.adoptImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.name{
  color: #999;
  font-size: 20rpx;
}
.title{
  font-size: 25rpx;
  margin-top: 15rpx;
}
.line{
  height: 0;
  width: 70%;

  margin-top: 25rpx;
  border-bottom: 2rpx solid #999;
}
.message{
  font-size: 26rpx;
  margin-top: 20rpx;
  color: #999;
}
.star{
  width: 90%;
  margin: 5%;
  background-color: #eee;
  height: 220rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  border-radius: 10rpx;
  align-items: center;
}
.pic{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.starname{
display: flex;
width: 100%;
justify-content: space-between;
  font-size: 30rpx;
  align-items: center;
}
.linear{

 background:  linear-gradient(90deg, rgba(252, 182, 148, 1) 0%, rgba(252, 182, 148, 1) 0%, rgba(248, 119, 161, 1) 100%, rgba(248, 119, 161, 1) 100%);
 width: 100rpx;
 font-size: 18rpx;
line-height: 30rpx;
text-align: center;
margin-left: 15rpx;
color: #fff;
 height: 30rpx;
 border-radius: 20rpx;
}
.startime{
  margin-top: 10rpx;
  color: #999;
  font-size: 20rpx;
  margin-bottom: 20rpx;
}
.starcon{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 20rpx;
  color: #333;
}

.hot{
  height: 30rpx;
  width: 30rpx;
  margin-left: 20rpx;
}
.supporthot{
  color: red;
  font-size: 20rpx;
}
.heart{
  width: 30rpx;
  height: 30rpx;
}